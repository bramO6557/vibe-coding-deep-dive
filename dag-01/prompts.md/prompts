  <script>
    function toggleGreeting() {
      const box = document.getElementById('greeting');
      box.style.display = (box.style.display === 'none' || box.style.display === '') 
        ? 'block' 
        : 'none';
    }

    let themeIndex = 0;
    const themes = [
      "linear-gradient(to bottom, #0a1f4d, #1e73ff)",
      "linear-gradient(to bottom, #004d00, #00cc44)",
      "linear-gradient(to bottom, #660000, #ff3300)"
    ];

    function changeTheme() {
      themeIndex = (themeIndex + 1) % themes.length;
      document.body.style.background = themes[themeIndex];
    }
  </script>
</body>
</html>


